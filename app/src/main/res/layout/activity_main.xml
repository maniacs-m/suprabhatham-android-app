<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"

    >
    <!--include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include-->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scheduler"
        android:id="@+id/button3"
        android:onClick="startScheduler"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:background="@drawable/ic_action_play"
        android:onClick="playSong"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suprabhatham"
        android:id="@+id/textView"
        android:height="50dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#006064"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/ic_action_stop"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton"
        android:onClick="stopSong"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Suprabhatham lyrics"
        android:id="@+id/button"
        android:onClick="viewLyrics"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:visibility="invisible"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>