<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lord_venkat_1">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tamil Lyrics"
        android:id="@+id/button4"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="showTamilLyrics"

        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="English Lyrics"
        android:id="@+id/button2"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="showEnglishLyrics"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Telugu Lyrics"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="showTeluguLyrics"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kannada Lyrics"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="showKannadaLyrics"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>